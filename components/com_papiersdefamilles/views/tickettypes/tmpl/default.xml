<?xml version="1.0" encoding="utf-8"?>

<metadata>
	<layout title="PAPIERSDEFAMILLES_LAYOUT_TICKETTYPES">
	<message>
		<![CDATA[PAPIERSDEFAMILLES_LAYOUT_SHOW_TICKETTYPES_LAYOUT]]>
	</message></layout>

	<fields name="request">

		<fieldset name="request" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">


			<field
				    name="filter_continent_id"
				    type="sql"
				    label="PAPIERSDEFAMILLES_JSEARCH_CONTINENT_NAME"
				    query="SELECT id as value, name as title FROM #__PAPIERSDEFAMILLES_continents WHERE published = 1"
				    key_field="value"
				    value_field="title"
				    multiple="true"
				    />


			<field name="filter_is_online_quote"
				   alias="filter_is_online_quote"
				   label="PAPIERSDEFAMILLES_FIELD_IS_ONLINE_QUOTE"
				   filter="BOOL"
				   listKey="value"
				   type="ckradio"
				   viewType="both"
				   required="true"
				   class="validate[required]">
				<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
				<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
			</field>
		</fieldset>
	</fields>
</metadata>