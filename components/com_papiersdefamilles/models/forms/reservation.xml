<?xml version="1.0" encoding="utf-8"?>


<form>
	<fieldset name="reservation.form" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">
		<field name="ticket_type_id"
				alias="_ticket_type_id_num_id"
				label="PAPIERSDEFAMILLES_FIELD_TICKET_TYPE"
				filter="INT"
				listKey="id"
				labelKey="num_id"
				type="ckcombo"
				nullLabel="PAPIERSDEFAMILLES_JSEARCH_SELECT_TICKET_TYPE"
			   	required="true"
				class="validate[required]"/>

		<field name="departure_city_id"
				alias="_departure_city_id_name"
				label="PAPIERSDEFAMILLES_FIELD_DEPARTURE_CITY"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="PAPIERSDEFAMILLES_JSEARCH_SELECT_DEPARTURE_CITY"
			    required="true"
				class="validate[required]"/>

		<field 
				name="departure_date"
				alias="departure_date"
				type="calendar" 
				default="" 
				label="PAPIERSDEFAMILLES_FIELD_DEPARTURE_DATE"
				description=""
				class="input-small validate[required,custom[date]]"
				hint="dd-mm-yyyy"
				required="true"
				filter="user_utc"
				showtime="false" 
				todaybutton="false" 
				filltable="false"
				format='%d-%m-%Y'
				translateformat="true" />

		<field 
				name="arrival_date"
				alias="arrival_date"
				type="calendar" 
				default="" 
				label="PAPIERSDEFAMILLES_FIELD_ARRIVAL_DATE"
				description=""
				class="input-small validate[required,custom[date]]"
				hint="dd-mm-yyyy"
				filter="user_utc"
				showtime="false" 
				todaybutton="false" 
				filltable="false"
				format='%d-%m-%Y'
				translateformat="true" />

		<field name="number_adult_ticket"
				alias="number_adult_ticket"
				label="PAPIERSDEFAMILLES_FIELD_NUMBER_ADULT_TICKET"
				filter="STRING"
			    class="validate[required, custom[integer]]"
			   	required="true"
				type="cktext"/>

		<field name="number_childrent_ticket_1"
				alias="number_childrent_ticket_1"
				label="PAPIERSDEFAMILLES_FIELD_NUMBER_CHILDRENT_TICKET_1"
				filter="STRING"
			    class="validate[custom[integer]]"
				type="cktext"/>

		<field name="number_childrent_ticket_2"
				alias="number_childrent_ticket_2"
				label="PAPIERSDEFAMILLES_FIELD_NUMBER_CHILDRENT_TICKET_2"
				filter="STRING"
			    class="validate[custom[integer]]"
			 	type="cktext"/>

		<field name="information_adult"
				type="subform"
				label="PAPIERSDEFAMILLES_FIELD_INFORMATION_ADULT"
				min="0"
				max="10"          
				formsource= "administrator/components/com_papiersdefamilles/models/forms/subtraveller.xml"
				multiple= "true"
				default= '[{"name":"", "surname":"", "birthday":""}]'
				buttons= "add,remove"
				layout="joomla.form.field.subform.repeatable-table"
				groupByFieldset="false"/>

		<field name="information_child_1"
				type="subform"
				label="PAPIERSDEFAMILLES_FIELD_INFORMATION_CHILD_1"
				min="0"
				max="10"        
				formsource= "administrator/components/com_papiersdefamilles/models/forms/subtraveller.xml"
				multiple= "true"
				default= '[{"name":"", "surname":"", "birthday":""}]'
				buttons= "add,remove"
				layout="joomla.form.field.subform.repeatable-table"
				groupByFieldset="false"/>

		<field name="information_child_2"
				type="subform"
				label="PAPIERSDEFAMILLES_FIELD_INFORMATION_CHILD_2"
				min="0"
				max="10"
				formsource= "administrator/components/com_papiersdefamilles/models/forms/subtraveller.xml"
				multiple= "true"
				default= '[{"name":"", "surname":"", "birthday":""}]'
				buttons= "add,remove"
				layout="joomla.form.field.subform.repeatable-table"
				groupByFieldset="false"/>		
	

		<field name="name"
				alias="name"
				label="PAPIERSDEFAMILLES_FIELD_NAME"
				filter="STRING"
				type="cktext"/>

		<field name="surname"
				alias="surname"
				label="PAPIERSDEFAMILLES_FIELD_SURNAME"
				filter="STRING"
				type="cktext"/>

		<field name="phone"
				alias="phone"
				label="PAPIERSDEFAMILLES_FIELD_PHONE"
				filter="STRING"
			   placeholder="PAPIERSDEFAMILLES_FIELD_PHONE"
				type="cktext"/>

		<field name="address"
				alias="address"
				label="PAPIERSDEFAMILLES_FIELD_ADDRESS"
				filter="STRING"
				type="cktext"/>

		<field name="zip_code"
				alias="zip_code"
				label="PAPIERSDEFAMILLES_FIELD_ZIP_CODE"
				filter="STRING"
			   placeholder="PAPIERSDEFAMILLES_FIELD_ZIP_CODE"
				type="cktext"/>

		<field name="city"
				alias="city"
				label="PAPIERSDEFAMILLES_FIELD_CITY"
			   placeholder="PAPIERSDEFAMILLES_FIELD_CITY"
				filter="STRING"
				type="cktext"/>

		<field name="email"
				alias="email"
				label="PAPIERSDEFAMILLES_FIELD_EMAIL"
				filter="STRING"
			   placeholder="PAPIERSDEFAMILLES_FIELD_EMAIL"
				type="cktext"/>

		<field name="birthday"
		        hint="dd-mm-yyyy"
		        type="calendar"
		        label="PAPIERSDEFAMILLES_FIELD_BIRTHDAY"
		        format="%d-%m-%Y"
		        filter="user_utc"/>

		<field name="ticket_price"
				alias="ticket_price"
				label="PAPIERSDEFAMILLES_FIELD_TICKET_PRICE"
				filter="STRING"
				type="cktext"/>

		<field name="ticket_total"
				alias="ticket_total"
				label="PAPIERSDEFAMILLES_FIELD_TICKET_TOTAL"
				filter="STRING"
				type="cktext"/>

		<field name="discount"
				alias="discount"
				label="PAPIERSDEFAMILLES_FIELD_DISCOUNT"
				filter="STRING"
				type="cktext"/>

		<field name="is_quote"
				alias="is_quote"
				label="PAPIERSDEFAMILLES_FIELD_QUOTE"
				filter="BOOL"
				listKey="value"
				type="ckradio"
			    default="0"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="is_paypal"
				alias="is_paypal"
				label="PAPIERSDEFAMILLES_FIELD_PAYPAL"
				filter="BOOL"
				listKey="value"
				type="ckradio"
			    default="0"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="is_paypal_refund"
				alias="is_paypal_refund"
				label="PAPIERSDEFAMILLES_FIELD_PAYPAL_REFUND"
				filter="BOOL"
			    default="0"
				listKey="value"
				type="ckradio"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="payment_status"
				alias="payment_status"
				label="PAPIERSDEFAMILLES_FIELD_PAYMENT_STATUS"
				filter="BOOL"
			    default="0"
				listKey="value"
				type="ckradio"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="is_insurance"
			   alias="is_insurance"
			   label="PAPIERSDEFAMILLES_FIELD_IS_INSURANCE"
			   filter="BOOL"
			   default="0"
			   listKey="value"
			   type="ckradio"
			   viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="is_baggage_insurance"
			   alias="is_baggage_insurance"
			   label="PAPIERSDEFAMILLES_FIELD_IS_BAGGAGE_INSURANCE"
			   filter="BOOL"
			   default="0"
			   listKey="value"
			   type="ckradio"
			   viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>

		<field name="baggage_insurance_price"
			   alias="baggage_insurance_price"
			   label="PAPIERSDEFAMILLES_FIELD_TICKET_BAGGAGE_INSURANCE_PRICE"
			   filter="STRING"
			   type="cktext"/>

		<field name="insurance_price"
			   alias="insurance_price"
			   label="PAPIERSDEFAMILLES_FIELD_TICKET_INSURANCE_PRICE"
			   filter="STRING"
			   type="cktext"/>

		<field
				name="type_flight"
				type="ckradio"
				filter="STRING"
				required="true"
				listKey="value"
				class="validate[required]"
				label="PAPIERSDEFAMILLES_FIELD_TYPE_FLIGHT"
				viewType="both"
				description="">
			<option value="1">PAPIERSDEFAMILLES_ENUM_TYPE_FLIGHT_1</option>
			<option value="2">PAPIERSDEFAMILLES_ENUM_TYPE_FLIGHT_2</option>
			<option value="3">PAPIERSDEFAMILLES_ENUM_TYPE_FLIGHT_3</option>
		</field>

		<field
				name="gender"
				type="ckradio"
				filter="STRING"
				required="true"
				listKey="value"
				class="validate[required]"
				label="PAPIERSDEFAMILLES_FIELD_GENDER"
				viewType="both"
				description="">
			<option value="1">PAPIERSDEFAMILLES_ENUM_GENDER_1</option>
			<option value="2">PAPIERSDEFAMILLES_ENUM_GENDER_2</option>
		</field>

		<field name="published"
				alias="published"
				label="PAPIERSDEFAMILLES_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="1"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>
	</fieldset>


	<fieldset name="default.filters" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="filter_departure_date"
				type="ckcalendar"
				submit="true"
				placeholder="PAPIERSDEFAMILLES_FILTER_NULL_DEPARTURE_DATE"
				format="Y-m-d"
				label="PAPIERSDEFAMILLES_JSEARCH_DEPARTURE_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_arrival_date"
				type="ckcalendar"
				submit="true"
				placeholder="PAPIERSDEFAMILLES_FILTER_NULL_ARRIVAL_DATE"
				format="Y-m-d"
				label="PAPIERSDEFAMILLES_JSEARCH_ARRIVAL_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_ticket_type_id"
				listKey="id"
				labelKey="num_id"
				type="ckcombo"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_TICKET_TYPE_NUM_ID"
				class="span-2 element-filter"
				label="PAPIERSDEFAMILLES_JSEARCH_TICKET_TYPE_NUM_ID"
				ui="chosen"/>

		<field name="filter_birthday"
				type="ckcalendar"
				submit="true"
				placeholder="PAPIERSDEFAMILLES_FILTER_NULL_BIRTHDAY"
				format="Y-m-d"
				label="PAPIERSDEFAMILLES_JSEARCH_BIRTHDAY"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_created_by"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_CREATED_BY_NAME"
				class="span-2 element-filter"
				label="PAPIERSDEFAMILLES_JSEARCH_CREATED_BY_NAME"
				ui="chosen"/>

		<field name="filter_modified_by"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_MODIFIED_BY_NAME"
				class="span-2 element-filter"
				label="PAPIERSDEFAMILLES_JSEARCH_MODIFIED_BY_NAME"
				ui="chosen"/>

		<field name="filter_creation_date_from"
				placeholder="PAPIERSDEFAMILLES_FILTER_CREATION_DATE_CREATION_DATE_FROM"
				type="ckcalendar"
				submit="true"
				format="Y-m-d H:i"
				label="PAPIERSDEFAMILLES_JSEARCH_CREATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_creation_date_to"
				placeholder="PAPIERSDEFAMILLES_FILTER_CREATION_DATE_CREATION_DATE_TO"
				type="ckcalendar"
				submit="true"
				format="Y-m-d H:i"
				label="PAPIERSDEFAMILLES_JSEARCH_CREATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_modification_date_from"
				placeholder="PAPIERSDEFAMILLES_FILTER_MODIFICATION_DATE_MODIFICATION_DATE_FROM"
				type="ckcalendar"
				submit="true"
				format="Y-m-d H:i"
				label="PAPIERSDEFAMILLES_JSEARCH_MODIFICATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_modification_date_to"
				placeholder="PAPIERSDEFAMILLES_FILTER_MODIFICATION_DATE_MODIFICATION_DATE_TO"
				type="ckcalendar"
				submit="true"
				format="Y-m-d H:i"
				label="PAPIERSDEFAMILLES_JSEARCH_MODIFICATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="PAPIERSDEFAMILLES_FILTER_NULL_NUMBER_ADULT_TICKET_NUMBER_CHILDRENT_TICKET_1_NUMBER_CHILDRENT_TICKET_2_INFORMATION_ADULT_INFORMATION_CHILD_1_INFORMATION_CHILD_2_NAME_SURNAME_PHONE_ADDRESS_ZIP_CODE_CITY_EMAIL_TICKET_PRICE_TICKET_TOTAL_DISCOUNT"
				label="PAPIERSDEFAMILLES_JSEARCH_NUMBER_ADULT_TICKET_NUMBER_CHILDRENT_TICKET_1_NUMBER_CHILDRENT_TICKET_2_INFORMATION_ADULT_INFORMATION_CHILD_1_INFORMATION_CHILD_2_NAME_SURNAME_PHONE_ADDRESS_ZIP_CODE_CITY_EMAIL_TICKET_PRICE_TICKET_TOTAL_DISCOUNT"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>