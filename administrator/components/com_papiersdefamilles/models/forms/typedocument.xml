<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="typedocument.form" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">

		<field name="name"
				alias="name"
				label="PAPIERSDEFAMILLES_FIELD_NAME"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="alias"
				alias="alias"
				label="PAPIERSDEFAMILLES_FIELD_ALIAS"
				filter="STRING"
				type="hidden"/>

		<field name="description"
			   alias="description"
			   label="PAPIERSDEFAMILLES_FIELD_DESCRIPTION"
			   filter="STRING"
			   type="cktextarea"/>

		<field name="note"
			   alias="note"
			   label="PAPIERSDEFAMILLES_FIELD_NOTE"
			   filter="STRING"
			   type="cktextarea"/>

		<field name="published"
				alias="published"
				label="PAPIERSDEFAMILLES_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="1"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">PAPIERSDEFAMILLES_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">PAPIERSDEFAMILLES_FIELDS_BOOL_YES</option>
		</field>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="PAPIERSDEFAMILLES_FILTER_NULL_NAME_ALIAS"
				label="PAPIERSDEFAMILLES_JSEARCH_NAME_ALIAS"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_papiersdefamilles/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="PAPIERSDEFAMILLES_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>